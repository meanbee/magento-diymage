/* @var $this Mage_Reports_Block_Product_Viewed */
?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="block block-list block-viewed">
    <div class="block-title">
        <strong><span><?php echo $this->__('Recently Viewed Products') ?></span></strong>
    </div>
    <div class="block-content">
        <ol id="recently-viewed-items">
        <?php foreach ($_products as $_item): ?>
        	<li class="hproduct"> 
        	    <a href="#" title="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>" class="product-image">
					<img class="photo" src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(50); ?>" width="50" height="50" alt="<?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>">
				</a>
                <h3 class="product-name item">
            	    <a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?></a>
            	</h3>
            	<?php // Get price and use price.phtml to make sure it's accurate. ?>
            	<?php $_product_block = $this->getLayout()->createBlock('catalog/product'); ?>
            	<?php $_product_block->setTemplate('catalog/product/price.phtml') ?>
            	<?php $_product_block->setProduct($_item) ?>
            	<?php echo $_product_block->toHtml(); ?>
            </li>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
    </div>
</div>
<?php endif; ?>
