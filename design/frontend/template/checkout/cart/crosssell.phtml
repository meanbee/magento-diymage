/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="block block-related">
    <div class="block-title">
        <h2><?php echo $this->__('Related Products') ?></h2>
    </div>
    <div class="block-content">
        <ol id="crosssell-products">
        <?php foreach ($this->getItems() as $_item): ?>
            <li class="hproduct hreview">
                <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>"><img class="photo" src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(120); ?>" width="120" height="120" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
                <h2 class="product-name item"><a class="fn" title="<?php echo $this->htmlEscape($_item->getName()) ?>" href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h2>
                <?php echo $this->getPriceHtml($_item, true) ?>
                <div class="actions">
                    <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button simple-button" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><?php echo $this->__('Add to Cart') ?></button>
                </div>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>
